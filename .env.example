# Server
NODE_ENV=development
PORT=3000

# Auth
JWT_SECRET=dev-secret-change-me

# AI (Vercel v0 API via Vercel AI SDK)
# Get a key from https://v0.dev/chat/settings/keys
# Requires Premium or Team plan with usage-based billing
VERCEL_API_KEY=your-vercel-api-key-here

# Testing / Demo
# Force mock responses to avoid any paid calls
USE_MOCK_AI=true

# Rate Limits (per hour)
GUEST_LIMIT=3
FREE_LIMIT=10
PREMIUM_LIMIT=50
WINDOW_SIZE_HOURS=1
